/**
 * Not gate:
 * out = not in
 */

CHIP Not {
	IN in;
	OUT out;
	
	PARTS:
	Nand(a=in, b=in, out=out);
}

/**
 * And gate: 
 * out = 1 if (a == 1 and b == 1)
 *       0 otherwise
 */

CHIP And {
    IN a, b;
    OUT out;

    PARTS:
    Nand(a=a, b=b, out=nand);
    Not(in=nand, out=out);
}

CHIP Or {
	IN a, b;
	OUT out;
	
	PARTS:
	Not(in=a, out=nota);
	Not(in=b, out=notb);
	And(a=nota, b=notb, out=notab);
	Not(in=notab, out=out);
}
